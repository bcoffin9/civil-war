<%= form_for(@battle, html: {multipart: true}) do |f| %>
	<ul>
		<% @battle.errors.full_messages.each do |error| %>
		<li><%= error %></li>
		<% end %>
	</ul>
	<p>
		<%= f.label :title %><br />
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label :description %><br />
		<%= f.text_area :description %>
	</p>
	<p>
		<%= f.label :tag_list %><br />
		<%= f.text_field :tag_list %>
	</p>
	<p>
		<% if @battle.image.exists? %>
			<%= image_tag @battle.image.url %><br />
		<% end %>
		<%= f.label :image, "Attach an Image" %><br />
		<%= f.file_field :image %>
	</p>
	<p>
		<%= f.submit %>
	</p>

	<% end %>