<header>
	<h1><%= @battle.title %></h1>
</header>

<div class='content-main-aside'>
	<% if @battle.image.exists? %>
	<p><%= image_tag @battle.image.url(:medium) %></p>
	<% end %>
	<div id='main'>
		<p><%= @battle.description %></p>
	</div>

	<div id='aside'>
		<h3>Scenes (<%= @battle.scenes.size %>)</h3>
		<%= render partial: 'battles/scene', collection: @battle.scenes %>
		<%= render partial: 'scenes/form' %>
	</div>

	<div>
		Tags:
		<% @battle.tags.each do |tag| %>
			<%= link_to tag.name, tag_path(tag) %>
		<% end %>
</div>

	<%= link_to "<<Back to Battles", battles_path %>
	<%= link_to "delete", battle_path(@battle), method: :delete, data: {confirm: "Really delete the article?"} %>
	<%= link_to "edit", edit_battle_path(@battle) %>
